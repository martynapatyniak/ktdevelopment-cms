---
layout: layout.njk
---

<article class="blog-post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
      {% if tags %}
        <div class="post-tags">
          {% for tag in tags %}
            <span class="tag">#{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    <a href="/blog/" class="back-to-blog">← Powrót do bloga</a>
  </footer>
</article>

<style>
.blog-post {
  max-width: 800px;
  margin: 2rem auto;
  padding: 0 1rem;
}

.post-header {
  margin-bottom: 2rem;
  border-bottom: 1px solid #eee;
  padding-bottom: 1rem;
}

.post-meta {
  color: #666;
  margin-top: 0.5rem;
}

.post-tags {
  margin-top: 0.5rem;
}

.tag {
  background: #f0f0f0;
  padding: 0.2rem 0.5rem;
  border-radius: 3px;
  font-size: 0.8rem;
  margin-right: 0.5rem;
}

.post-content {
  line-height: 1.6;
  margin-bottom: 3rem;
}

.post-content h2, .post-content h3 {
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.back-to-blog {
  display: inline-block;
  padding: 0.5rem 1rem;
  background: #007acc;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  transition: background 0.3s;
}

.back-to-blog:hover {
  background: #005fa3;
}
</style>
