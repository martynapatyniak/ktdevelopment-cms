<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "KT Development" }}</title>
    <!-- Podbij numer po zmianach CSS -->
    <link rel="stylesheet" href="{{ '/styles.css?v=14' | url }}" />
  </head>
  <body>

    <header class="header">
      <!-- === HAMBURGER + DRAWER (MOBILE) === -->
      <!-- Ukryty checkbox musi być przed przyciskiem i panelem -->
      <input type="checkbox" id="menu-toggle" class="menu-toggle" />

      <!-- Przycisk hamburger (bezpośredni sąsiad +) -->
      <label
        for="menu-toggle"
        class="hamburger"
        aria-label="Otwórz menu"
        aria-controls="mobile-drawer"
        aria-expanded="false"
      >
        <span></span><span></span><span></span>
      </label>

      <!-- Panel (rodzeństwo ~) -->
      <aside
        id="mobile-drawer"
        class="mobile-drawer"
        role="dialog"
        aria-modal="true"
        aria-labelledby="mobile-menu-title"
        tabindex="-1"
      >
        <header>
          <h2 id="mobile-menu-title">Menu</h2>
          <!-- Zamknięcie jako label: działa bez JS i z JS -->
          <label for="menu-toggle" class="close" aria-label="Zamknij">×</label>
        </header>
        <nav>
          <!-- HOME zawsze na /; JS dopnie ?lang=AKTUALNY -->
          <a href="/" data-home>Strona główna</a>
          <a href="/pl/oferta/">Oferta</a>
          <a href="/pl/projekty/">Projekty</a>
          <a href="/blog/">Blog</a>
          <a href="/pl/kontakt/">Kontakt</a>
        </nav>
      </aside>

      <!-- Backdrop też jako label: klikalny bez JS -->
      <label for="menu-toggle" class="mobile-drawer-backdrop" aria-hidden="true"></label>
      <!-- === /HAMBURGER === -->

      <div class="container-column">
        <div class="logo-title">
          <img src="/base_icon_white_background.png" alt="KT Logo" class="logo" />
          <h1>KT DEVELOPMENT</h1>
        </div>

        <!-- Menu poziome (desktop) -->
        <nav class="nav" aria-label="Główne">
          <!-- HOME zawsze na /; JS dopnie ?lang=AKTUALNY -->
          <a href="/" data-home>Strona główna</a>
          <a href="/pl/oferta/">Oferta</a>
          <a href="/pl/projekty/">Projekty</a>
          <a href="/blog/">Blog</a>
          <a href="/pl/kontakt/">Kontakt</a>
        </nav>

        <div class="language-switcher" aria-label="Wybór języka">
          <a href="/pl/index/">PL</a> <span>|</span> <a href="/en/">EN</a>
        </div>
      </div>
    </header>

    <main id="main-content">
      {{ content | safe }}
    </main>

    <!-- JS: aria-expanded, Esc, zamknięcie po kliknięciu linku, cleanup na desktopie -->
    <script>
      (function () {
        var cb = document.getElementById('menu-toggle');
        var trigger = document.querySelector('.hamburger');
        var drawer = document.getElementById('mobile-drawer');

        function sync() {
          if (!cb || !trigger) return;
          var open = cb.checked;
          trigger.setAttribute('aria-expanded', String(open));
          document.body.style.overflow = open ? 'hidden' : '';
        }

        if (cb) {
          cb.addEventListener('change', sync);
          sync();
        }

        // Zamknięcie klawiszem Esc
        if (drawer) {
          drawer.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && cb) { cb.checked = false; sync(); }
          });
          // Zamknięcie po kliknięciu w link w panelu
          drawer.addEventListener('click', function (e) {
            var t = e.target;
            if (t && t.tagName === 'A' && cb) { cb.checked = false; sync(); }
          });
        }

        // Porządek po przejściu na desktop
        var mq = window.matchMedia('(min-width: 769px)');
        mq.addEventListener('change', function (e) {
          if (e.matches && cb) { cb.checked = false; sync(); }
        });
      })();
    </script>

    <!-- JS: HOME => zawsze /?lang=AKTUALNY (działa na KAŻDEJ podstronie) -->
    <script>
      (function(){
        var LS_KEY = 'site_lang';

        function getLang(){
          var attr = document.documentElement.getAttribute('data-lang');
          if (attr === 'pl' || attr === 'en') return attr;
          var ls = localStorage.getItem(LS_KEY);
          if (ls === 'pl' || ls === 'en') return ls;
          return (navigator.language || 'en').toLowerCase().startsWith('pl') ? 'pl' : 'en';
        }

        function rewriteHomeHrefs(){
          var lang = getLang();
          document.querySelectorAll('a[data-home]').forEach(function(a){
            a.setAttribute('href','/?lang='+lang);
            a.setAttribute('hreflang', lang);
          });
        }

        // na starcie + gdy zmieni się data-lang (np. po kliknięciu PL/EN na stronie głównej)
        rewriteHomeHrefs();
        new MutationObserver(function(muts){
          for (var i=0;i<muts.length;i++){
            var m = muts[i];
            if (m.type==='attributes' && m.attributeName==='data-lang'){ rewriteHomeHrefs(); break; }
          }
        }).observe(document.documentElement,{ attributes:true });

        // przechwyć klik w HOME i przenieś na /?lang=...
        document.addEventListener('click', function(e){
          var a = e.target.closest && e.target.closest('a[data-home]');
          if (!a) return;
          e.preventDefault();
          var lang = getLang();
          var url = '/?lang=' + lang;

          if (location.pathname === '/' && new URLSearchParams(location.search).get('lang') === lang){
            window.scrollTo({ top: 0, behavior: 'smooth' });
          } else {
            location.assign(url);
          }

          var cb = document.getElementById('menu-toggle');
          if (cb) cb.checked = false; // zamknij hamburger na mobile
        }, true);
      })();
    </script>
  </body>
</html>
