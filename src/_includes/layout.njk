<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "KT Development" }}</title>
    <!-- Podbij numer po zmianach CSS -->
    <link rel="stylesheet" href="{{ '/styles.css?v=17' | url }}" />
  </head>
  <body>

    <header class="header">
      <!-- === HAMBURGER + DRAWER (MOBILE) === -->
      <input type="checkbox" id="menu-toggle" class="menu-toggle" />

      <label
        for="menu-toggle"
        class="hamburger"
        aria-label="Otwórz menu"
        aria-controls="mobile-drawer"
        aria-expanded="false"
      >
        <span></span><span></span><span></span>
      </label>

      <aside
        id="mobile-drawer"
        class="mobile-drawer"
        role="dialog"
        aria-modal="true"
        aria-labelledby="mobile-menu-title"
        tabindex="-1"
      >
        <header>
          <h2 id="mobile-menu-title">Menu</h2>
          <label for="menu-toggle" class="close" aria-label="Zamknij">×</label>
        </header>
        <nav>
          <!-- HOME zawsze na /; JS dopnie ?lang=AKTUALNY -->
          <a href="/" data-home>Strona główna</a>
          <a href="/pl/oferta/">Oferta</a>
          <a href="/pl/projekty/">Projekty</a>
          <a href="/blog/">Blog</a>
          <a href="/pl/kontakt/">Kontakt</a>
        </nav>
      </aside>

      <label for="menu-toggle" class="mobile-drawer-backdrop" aria-hidden="true"></label>
      <!-- === /HAMBURGER === -->

      <div class="container-column">
        <div class="logo-title">
          <img src="/base_icon_white_background.png" alt="KT Logo" class="logo" />
          <h1>KT DEVELOPMENT</h1>
        </div>

        <nav class="nav" aria-label="Główne">
          <!-- HOME zawsze na /; JS dopnie ?lang=AKTUALNY -->
          <a href="/" data-home>Strona główna</a>
          <a href="/pl/oferta/">Oferta</a>
          <a href="/pl/projekty/">Projekty</a>
          <a href="/blog/">Blog</a>
          <a href="/pl/kontakt/">Kontakt</a>
        </nav>

        <div class="language-switcher" aria-label="Wybór języka">
          <!-- Fallback bez JS (stare ścieżki) -->
          <a href="/pl/index/">PL</a> <span>|</span> <a href="/en/">EN</a>
        </div>
      </div>
    </header>

    <main id="main-content">
      {{ content | safe }}
    </main>

    <!-- JS: hamburger podstawy -->
    <script>
      (function () {
        var cb = document.getElementById('menu-toggle');
        var trigger = document.querySelector('.hamburger');
        var drawer = document.getElementById('mobile-drawer');

        function sync() {
          if (!cb || !trigger) return;
          var open = cb.checked;
          trigger.setAttribute('aria-expanded', String(open));
          document.body.style.overflow = open ? 'hidden' : '';
        }

        if (cb) {
          cb.addEventListener('change', sync);
          sync();
        }

        if (drawer) {
          drawer.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && cb) { cb.checked = false; sync(); }
          });
          drawer.addEventListener('click', function (e) {
            var t = e.target;
            if (t && t.tagName === 'A' && cb) { cb.checked = false; sync(); }
          });
        }

        var mq = window.matchMedia('(min-width: 769px)');
        mq.addEventListener('change', function (e) {
          if (e.matches && cb) { cb.checked = false; sync(); }
        });
      })();
    </script>

    <!-- JS: i18n shell (GLOBALNIE: język bez przeładowania + tłumaczenie etykiet menu + HOME => /?lang=...) -->
    <script>
      (function(){
        var LS_KEY = 'site_lang';

        function detectLang(){
          var sp = new URLSearchParams(location.search).get('lang');
          if (sp === 'pl' || sp === 'en') return sp;
          var ls = localStorage.getItem(LS_KEY);
          if (ls === 'pl' || ls === 'en') return ls;
          return (navigator.language || 'en').toLowerCase().startsWith('pl') ? 'pl' : 'en';
        }

        function setLang(lang){
          if (lang !== 'pl' && lang !== 'en') lang = 'pl';
          document.documentElement.setAttribute('data-lang', lang);
          localStorage.setItem(LS_KEY, lang);
          // ?lang= w URL bez przeładowania
          var params = new URLSearchParams(location.search);
          params.set('lang', lang);
          history.replaceState({}, '', location.pathname + '?' + params.toString() + location.hash);
          // aria w przełączniku
          document.querySelectorAll('.language-switcher a').forEach(function(a){
            var code = (a.textContent || '').trim().toLowerCase();
            a.setAttribute('aria-current', code === lang ? 'true' : 'false');
            a.setAttribute('aria-pressed', code === lang ? 'true' : 'false');
          });
          // zaktualizuj etykiety menu i HOME hrefy
          setNavLabels(lang);
          rewriteHomeHrefs(lang);
        }

        // mapowanie etykiet wg docelowego języka
        var LABELS = {
          pl: { home: 'Strona główna', offer: 'Oferta', projects: 'Projekty', blog: 'Blog', contact: 'Kontakt' },
          en: { home: 'Home',          offer: 'Offer',  projects: 'Projects', blog: 'Blog', contact: 'Contact' }
        };

        function norm(href){
          try { return new URL(href, location.origin).pathname; }
          catch(_) { return href || ''; }
        }

        function setNavLabels(lang){
          var L = LABELS[lang] || LABELS.pl;
          // desktop + mobile
          document.querySelectorAll('header .nav a, #mobile-drawer nav a').forEach(function(a){
            var p = norm(a.getAttribute('href'));
            var key = null;
            if (p === '/' || p === '/pl/' || p === '/pl/index/') key = 'home';
            else if (p.indexOf('/pl/oferta/') === 0) key = 'offer';
            else if (p.indexOf('/pl/projekty/') === 0) key = 'projects';
            else if (p.indexOf('/blog/') === 0) key = 'blog';
            else if (p.indexOf('/pl/kontakt/') === 0) key = 'contact';
            if (key) a.textContent = L[key];
          });
        }

        function rewriteHomeHrefs(lang){
          document.querySelectorAll('a[data-home]').forEach(function(a){
            a.setAttribute('href','/?lang='+lang);
            a.setAttribute('hreflang', lang);
          });
        }

        // Inicjalizacja na KAŻDEJ podstronie
        var start = detectLang();
        setLang(start);

        // Przechwyć klik w przełącznik PL/EN – BEZ przeładowania
        var switcher = document.querySelector('.language-switcher');
        if (switcher){
          switcher.addEventListener('click', function(e){
            var a = e.target.closest('a');
            if (!a) return;
            var code = (a.textContent || '').trim().toLowerCase();
            if (code === 'pl' || code === 'en'){
              e.preventDefault();
              setLang(code);   // ← tu tylko tłumaczymy, nie ładujemy innej strony
            }
          }, true);
        }

        // HOME => zawsze do strony głównej, w AKTUALNYM języku
        document.addEventListener('click', function(e){
          var a = e.target.closest && e.target.closest('a[data-home]');
          if (!a) return;
          e.preventDefault();
          var lang = document.documentElement.getAttribute('data-lang') || 'pl';
          var url = '/?lang=' + lang;
          if (location.pathname === '/' && new URLSearchParams(location.search).get('lang') === lang){
            window.scrollTo({ top: 0, behavior: 'smooth' });
          } else {
            location.assign(url);
          }
          var cb = document.getElementById('menu-toggle');
          if (cb) cb.checked = false;
        }, true);
      })();
    </script>
  </body>
</html>
